@model IEnumerable<Storage.Models.ProductViewModel>

@{
    ViewData["Title"] = "Get";
}

<h1>ProductView</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form method="post">
    <button asp-controller="Products" asp-action="Fil">Sök på kategori</button>
    <input type="text" name="category" />
    <button asp-controller="Products" asp-action="Drop">Kolla</button>
    <select asp-for="Id" asp-items="@Model.First().Storage">
        <option value="Name">Name</option>
        <option value="Price">Price</option>
        <option value="OrderDate">OrderDate</option>
        <option value="Category">Category</option>
        <option value="Shelf">Shelf</option>
        <option value="Count">Count</option>
        <option value="Description">Description</option>

    </select>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InventoryValue)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
